{
  "compilerOptions": {
    "target": "ES2024",
    "module": "Node16",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "./server.ts",
    "./electron/controller/**/*",
    "./electron/service/**/*",
    "./electron/rag/**/*",
    "./electron/model_engines/**/*",
    "./electron/search_engines/**/*",
    "./electron/class/**/*",
    "./electron/config/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "frontend/**/*",
    "dist/**/*",
    "public/**/*",
    "electron/preload/**/*",
    "electron/service/os/**/*",
    "electron/service/os_backup/**/*",
    "electron/rag/doc_engins/doc.test.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}